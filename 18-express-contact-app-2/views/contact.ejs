<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <a href="/contact/add" class="btn btn-primary mb-3">Tambah Data Kontak</a>

            <% if (msg.length != 0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %>
              </div>
            <% } %>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Detail</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <tr>
                      <th class="text-center" colspan="4" scope="row">Data Masih Kosong!</th>
                    </tr>
                  <% } %>
                  <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                      <th scope="row"><%= i %></th>
                      <td><%= contact.nama %></td>
                      <td><%= contact.noHP %></td>
                      <td><a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill">Detail</a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>